const db = require('../config/db');
const util = require('./util');


const DataSaveSampleResponse = (req,res) => {

    console.log(typeof(req.body));
    console.log(req.body);

 
     const tage = req.body.fulfillmentInfo.tag;

    
    const query = `
        INSERT INTO dialogflow_data2 (
            tage,
            text
        
        ) VALUES (?,?)
    `;
    db.query(
        query,
        [
           tage,
           text
        ],
        (err, result) => {
            if (err) {
                return res.status(500).send(err);
            }
            return res.send.util.formatResponseForDialogflow(
               [
                'Data saved successfully'
               ],
               '',
               '',
               '',
            );
        }
    );


    return util.formatResponseForDialogflow(
        [
            'Data Saved Sucessfully'
        ],
        '',
        '',
        ''
    );
};



module.exports = {
    DataSaveSampleResponse
};